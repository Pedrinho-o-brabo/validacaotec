@model IEnumerable<CadstroDeUsuario.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
               Nome do usuário
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <th>
                    <a asp-controller="Usuario" asp-action="Details" asp-route-id="@obj.ID">@obj.Nome</a>
                </th>
            </tr>
        }
    </tbody>
</table>
